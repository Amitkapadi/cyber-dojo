
<div id="exercise_qm">
  <%= t("views.labels.exercise") %>
</div>      

<div id="exercises_list">
  <% @exercises.each_with_index do |choice,index| %>
    <div class="filename" >
      <input id="exercise_<%= index %>" 
             type="radio"
             name="exercise" 
             value="<%= choice %>" />
      <label><%= choice.gsub("_", " ") %></label>
    </div>    
  <% end %>
</div>


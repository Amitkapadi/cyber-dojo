<% locales = {en: "English", fr: "French"} %>
<% # locales = {} #don't show choices, config/locales/*.yml files are not complete yet %>

<div class="i18n align-center">
  <% locales.each do |locale, text| %>
      <% if I18n.locale == locale %>
        <span class="locale current">
          <%= flag_image(text) %>
        </span>
      <% else %>
        <span class="locale">
          <%= link_to flag_image(text), "/locales/change/#{locale}" %>
        </span>
      <% end %>
  <% end %>
</div>
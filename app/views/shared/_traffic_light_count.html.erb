
<% if lights.length != 0 %>
    <% colour = lights.latest.colour %>
    <div class="traffic-light-count <%= colour %>"
         data-id="<%= @kata.id %>"
         data-avatar-name="<%= avatar_name %>"
         data-bulb-count="<%= lights.length %>"
         data-current-colour="<%= colour %>">
      <%= lights.length %>
    </div>
<% end %>

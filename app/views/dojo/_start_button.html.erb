
<script type="text/javascript"><!--

$(document).ready(function() {
  
  var startButton = $('#start_button');
  
  startButton.click(function() {    
    var ok = $(this).data('ok');
    cd.run('start_json', ok, function(id, dojo) {
      if (dojo.full) {        
        cd.dialog(dojo.full_dialog_html, id, ok).dialog('open');
      } else {
        cd.dialog_startCoding(id, ok, dojo.avatar_name, dojo.start_dialog_html).dialog('open');
      }
    });
  });
  startButton.tooltip(cd.tipSettings());
  
});

//--></script>

<input type="button"
       class="button"
       data-ok="<%= t('views.buttons.ok') %>"
       id="start_button"
       value="<%= t("views.buttons.start") %>">
  <div class="tooltip">
     start coding
  </div>
</input>
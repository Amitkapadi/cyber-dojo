
<script type="text/javascript"><!--

$(document).ready(function() {

  $('#enter-button').click(function() {
    var id = $('#kata-id-input').val();
    var ok = "<%= t('views.buttons.ok') %>";
    var title = "<%= t('views.buttons.enter') %>";
    var button = $(this);
    var cursor = button.css('cursor');
    button.css('cursor', 'wait');
    $.getJSON('/dojo/start_json' , { id: id }, function(dojo) {
      if (dojo.full) {
        cd.dialog(dojo.full_dialog_html, title, ok).dialog('open');
      } else {
        cd.dialog_startCoding(title, id, ok, dojo.avatar_name, dojo.start_dialog_html).dialog('open');
        cd.enableDisableStartResumeReview();
      }
    }).always(function() {
      button.css('cursor', cursor);
    });
  });

});

//--></script>

<button type="button"
        id="enter-button">
  <%= t("views.buttons.enter") %>
</button>
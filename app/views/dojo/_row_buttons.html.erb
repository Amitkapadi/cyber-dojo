
<script type="text/javascript"><!--

$(document).ready(function () {

  $('.show-dialog-button').click(function () {
    var name = $(this).attr('id');
    $.get('/dojo/button_dialog/' + name, function(html) {
      cd.dialog(html, null, name).dialog('open');
    });

  });

});

//--></script>

<% buttons = ['about', 'basics', 'donations', 'faqs',
              'feedback', 'links', 'source', 'recruiting',
              'refactoring', 'tips','why'
             ].map{ |action| [action, t("views.buttons.#{action}")] } %>

<% buttons.each do |action, text| %>
  <div class="button show-dialog-button"
       id="<%= action %>">
    <%= text %>
  </div>
<% end %>


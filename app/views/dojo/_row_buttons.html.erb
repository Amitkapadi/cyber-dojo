
<script type="text/javascript"><!--

$(document).ready(function () {

  $('.show-dialog-button').click(function () {
    var name = $(this).attr('id');
    var ok = $(this).data('ok');
    var title = $(this).text();
    $.get('/dojo/button_dialog/' + name, function(html) {
      cd.dialog(html, title, ok).dialog('open');
    });
  });

});

//--></script>

<% buttons = ['about', 'basics', 'donations', 
              'faqs', 'feedback', 'links', 
              'source', 'tips','why'
             ].map{ |action| [action, t("views.buttons.#{action}")] } %>

<% buttons.each do |action, text| %>
  <button class="show-dialog-button"
          data-ok="<%= t('views.buttons.ok') %>"
          id="<%= action %>">
    <%= text %>
  </button>
<% end %>


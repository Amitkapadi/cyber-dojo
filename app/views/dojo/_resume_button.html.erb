
<script type="text/javascript"><!--

$(document).ready(function() {
  
  var resumeButton = $('#resume_button');
  resumeButton.click(function() {
    var ok = $(this).data('ok');
    var cancel = $(this).data('cancel');
    cd.run('resume_json', ok, function(id, dojo) {    
      if (dojo.empty) {          
        cd.dialog_dojoIsEmpty(id, ok).dialog('open');
      } else {
        cd.dialog_resumeCoding(id, cancel, dojo.resume_dialog_html).dialog('open');          
      }
    }); 
  });
  resumeButton.tooltip(cd.tipSettings());
    
});

//--></script>

<input type="button"
       class="button"
       data-ok="<%= t('views.buttons.ok') %>"
       data-cancel="<%= t('views.buttons.cancel') %>"
       id="resume_button"
       value="<%= t("views.buttons.resume") %>">
  <div class="tooltip">
     resume coding
  <div>
</input>

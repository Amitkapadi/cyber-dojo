
<div align="center">
  <div id="full_dojo"><%= @id %> is full!</div>  
  <table>
    <% index = 0 %>
    <% size = 60 %>
    <% (1..4).each do |_| %>
    <tr>
      <% (1..4).each do |_| %>
      <td class="panel" align="center">
        <% avatar_name = @all_avatar_names[index] %>
        <input type='image'
               class='avatar_image'
               src="/images/avatars/<%= avatar_name %>.jpg"
               title="<%= avatar_name %> has started"
               width="<%= size %>"
               height="<%= size %>" />          
        <div>
          <%= avatar_name %>
        </div>
        <% index += 1 %>
      </td>
      <% end %>     
    </tr>
    <% end %>
  </table>
</div>

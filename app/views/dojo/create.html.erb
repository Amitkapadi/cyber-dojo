
<script language="JavaScript"
        type="text/javascript"><!--

$j(document).ready(function() {
  
  $j('#create_button').click(function() {
    $cd.postTo('/dojo/save', {
      name: "no-name",
      exercise: $j('input[name="exercise"]:checked').val(),
      language: $j('input[name="language"]:checked').val()
    });    
  });
  
  $j('#cancel_button').click(function() {
    $cd.postTo('/dojo/index');
  });
  
});

//--></script>

<table>
  <tr valign="center">
    <td class="panel" colspan="2">
      <table>
        <tr>
          <td>
            <% size = 50 -%>
            <%= link_to image_tag("/images/avatars/cyber-dojo.png",
                                      :border => 0,
                                      :size => "#{size}x#{size}",
                                      :title => 'cyber-dojo'),
                                  {
                                    :controller => :dojo,
                                    :action => :index
                                  } -%>
          </td>
          <td>&nbsp;</td>
          <td>
            <input type="button"
                   class="large button"
                   id="create_button" 
                   value="save" />
          </td>
          <td>&nbsp;</td>
          <td>
            <input type="button"
                   class="large button"
                   id="cancel_button" 
                   value="cancel" />
          </td>
        </tr>
      </table>
    </td>
    <td class="light_margin panel" valign="top" rowspan="2">
      <%= render :partial => 'instructions' -%>      
    </td>              
  </tr>
  
  <tr>
    <td class="panel" valign="top">
      <%= render :partial => 'choose_language' -%>      
    </td>
    <td class="panel" valign="top">
      <%= render :partial => 'choose_exercise' -%>      
    </td>
  </tr>
</table>



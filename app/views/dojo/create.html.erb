
<script language="JavaScript"
        type="text/javascript"><!--

$j(document).ready(function() {
  selectExercise("<%=@exercise_index-%>");
  selectLanguage("<%=@language_index-%>");
});

function selectExercise(index) {
  var info = $j('#exercise_info_' + index).val();
  $j('#exercise_info').val(info);
  
  var selected = $j('#exercise_' + index);
  selected.parent().siblings().each(function() {
    $j(this).attr('current_file', 'false');
  });
  selected.parent().attr('current_file', 'true');
  selected.attr('checked', 'checked');
}

function selectLanguage(index) {
  var selected = $j('#language_' + index);
  selected.parent().siblings().each(function() {
    $j(this).attr('current_file', 'false');
  });
  selected.parent().attr('current_file', 'true');
  selected.attr('checked', 'checked');
}

//--></script>

<form action="/dojo/save">

<input type="hidden"
       name="kata_name" 
       id="kata_name" 
       value="<%=@kata.name%>" />

<h1 title="<%= @kata.name%>">
  <% size = 40 -%>
  <%= image_tag("/images/avatars/cyber-dojo.png",
      :border => 0,
      :size => "#{size}x#{size}",
      :title => 'Home page') -%>
  <%= elided_name(@kata.name, 40) %>
</h1>

<table align="center">
  <tr>
    <td valign="top">
      <table class="panel">
        <tr>
          <td>
            <div>
              <span class="choose_title">Exercises</span>
            </div>
            
            <% @exercises.each_with_index do |choice,index| -%>
              <div class="filename" 
                   onclick='selectExercise(<%=index-%>);' >
                <input id="exercise_<%=index-%>" 
                       type="radio"
                       <% if @exercise_index==index -%>
                       checked="checked"
                       <% end -%>
                       onclick='selectExercise(<%=index-%>);'                      
                       name="exercise" 
                       value="<%=choice-%>" />
                <label><%= choice -%></label>
              </div>    
            <% end -%>    
            
          </td>
          <td>&nbsp;</rd>
          <td>
            <textarea name="exercise_info" 
                      id="exercise_info"
                      cols="62" 
                      rows="24">              
            </textarea>
          </td>          
        </tr>
      </table>
      
    </td>
    <td valign="top">
      <table class="panel">
        <tr>
          <td>
            <div class="choose_title">Languages</div>

            <% @languages.each_with_index do |choice,index| -%>
              <div class="filename"
                  <% if @language_index == index -%>
                  current_file = "true"
                  <% else -%>
                  current_file = "false"                
                  <% end -%>
                   onclick='selectLanguage(<%=index-%>);' >
                <input id="language_<%=index-%>" 
                       type="radio"
                       <% if @language_index==index -%>
                       checked="checked"
                       <% end -%>
                       onclick='selectLanguage(<%=index-%>);'                      
                       name="language" 
                       value="<%=choice-%>" />
                <label><%= choice -%></label>
              </div>    
            <% end -%>    
          </td>
        </tr>
      </table>
      
      <table class="panel">
        <tr>
          <td valign="top">
            <input id="save_button" 
                   class="larger button"
                   type="submit" 
                   value="save" 
                   name="save" />
          </td>
        </tr>
      </table>        
    </td>
  </tr>
</table>

</form>

<% @exercises.each_with_index do |choice,index| -%>
   <textarea style="display:none;" 
             name="exercise_info_<%=index-%>"
             id="exercise_info_<%=index-%>"><%=h @exercise_info[choice] -%></textarea>
<% end -%>      



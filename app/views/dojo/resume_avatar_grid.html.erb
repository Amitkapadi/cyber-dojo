
<script language="javascript" type="text/javascript"><!--

$j(document).ready(function() {
  
  $cd.resume = function(id, avatar_name) {
    $cd.postTo('/kata/edit', {
      id: id,
      avatar: avatar_name
    }, '_blank');  
    $cd.closeResumeDialog();
    return false;
  };
    
});

//--></script>

<div align="center">
  <h3>click your animal</h3>  
  <table>
    <% index = 0 -%>
    <% size = 70 -%>
    <% (1..4).each do |_| -%>
    <tr>
      <% (1..4).each do |_| -%>
      <td class="panel">
        <% avatar_name = @all_avatar_names[index] -%>
        <% if @live_avatar_names.include?(avatar_name) -%>
          <input type='image'
                 onclick='return $cd.resume("<%=@kata.id-%>","<%=avatar_name-%>");'
                 class='avatar_image'
                 src="/images/avatars/<%=avatar_name-%>.jpg"
                 title="Resume <%=avatar_name.humanize-%>"
                 width="<%=size-%>"
                 height="<%=size-%>" />          
          <br/>
          <span style="color: DarkGreen;">
            <%= avatar_name -%>
          </span>
        <% else -%>
          <%= bw_avatar_image(avatar_name, size) -%>
          <br/>
          <span style="color: Gray;">
            <%= avatar_name -%>
          </span>
        <% end -%>      
        <% index += 1 -%>
      </td>
      <% end -%>     
    </tr>
    <% end -%>
  </table>
</div>


<script language="javascript" type="text/javascript"><!--

function resume(avatar_name) {
  $cd.postTo('/kata/edit', {
    id: "<%=@kata.id-%>",
    avatar: avatar_name
  }, '_blank');  
  $cd.closeResumeDialog();
  return false;
}

//--></script>

<h1>resume-coding</h1>

<div align="center">
  <table>
    <% index = 0 -%>
    <% size = 80 -%>
    <% (1..4).each do |_| -%>
    <tr>
      <% (1..4).each do |_| -%>
      <td class="panel">
        <% avatar_name = @all_avatar_names[index] -%>
        <% if @live_avatar_names.include?(avatar_name) -%>
          <input type='image'
                 onclick='return resume("<%=avatar_name-%>");'
                 class='avatar_image'
                 src="/images/avatars/<%=avatar_name-%>.jpg"
                 title="Resume <%=avatar_name.humanize-%>"
                 width="<%=size-%>"
                 height="<%=size-%>" />          
          <br/>
          <span style="color: DarkGreen;">
            <%= avatar_name -%>
          </span>
        <% else -%>
          <%= bw_avatar_image(avatar_name, size) -%>
          <br/>
          <span style="color: Gray;">
            <%= avatar_name -%>
          </span>
        <% end -%>      
        <% index += 1 -%>
      </td>
      <% end -%>     
    </tr>
    <% end -%>
  </table>
  <h3>Click your animal</h3>  
</div>

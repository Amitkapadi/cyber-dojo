
<script language="javascript" type="text/javascript"><!--

function resume(avatar_name) {
  $cd.postTo('/kata/edit', {
    id: "<%=@kata.id-%>",
    avatar: avatar_name
  }, '_blank');  
  $cd.closeResumeDialog();
  return false;
}

//--></script>

<h1>resume-coding</h1>

<table align="center">
  <tr>
    <td>
      <% size = 60 -%>
      <%= link_to image_tag("/images/avatars/cyber-dojo.png",
          :border => 0, :size => "#{size}x#{size}", :title => 'Home page'),
            :controller => :kata,
            :action => :index,
            :id => @kata.id %>      
    </td>
    <td style="text-align: right; color: DarkGreen;">
       <div>kata =</div>
       <div>language =</div>
       <div>exercise =</div>
    </td>
    <td style="text-align: left; color: DarkGreen;">
       <div><%= elided_name(@kata.name, 15) -%></div>
       <div><%= @kata.language -%></div>
       <div><%= @kata.exercise -%></div>
    </td>
  </tr>
</table>


<div align="center">
  <table>
    <% index = 0 -%>
    <% size = 70 -%>
    <% (1..4).each do |_| -%>
    <tr>
      <% (1..4).each do |_| -%>
      <td class="panel">
        <% avatar_name = @all_avatar_names[index] -%>
        <% if @live_avatar_names.include?(avatar_name) -%>
          <input type='image'
                 onclick='return resume("<%=avatar_name-%>");'
                 class='avatar_image'
                 src="/images/avatars/<%=avatar_name-%>.jpg"
                 title="Resume <%=avatar_name.humanize-%>"
                 width="<%=size-%>"
                 height="<%=size-%>" />          
          <br/>
          <span style="color: DarkGreen;">
            <%= avatar_name -%>
          </span>
        <% else -%>
          <%= bw_avatar_image(avatar_name, size) -%>
          <br/>
          <span style="color: Gray;">
            <%= avatar_name -%>
          </span>
        <% end -%>      
        <% index += 1 -%>
      </td>
      <% end -%>     
    </tr>
    <% end -%>
  </table>
  <h3>Click your animal</h3>  
</div>

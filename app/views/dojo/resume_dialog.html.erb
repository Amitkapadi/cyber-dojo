
<div>
  <div class="align-center medium"><%= t("views.labels.click_to_resume") %></div>
  <table class="align-center">
    <% index = 0 %>
    <% size = 60 %>
    <% (1..4).each do |_| %>
    <tr>
      <% (1..4).each do |_| %>
      <td class="panel">
        <% avatar_name = @all_avatar_names[index] %>
        <% if @started_avatar_names.include?(avatar_name) %>
          <img onclick='return cd.resume("<%= @kata.id %>","<%= avatar_name %>");'
               src="/images/avatars/<%= avatar_name %>.jpg"
               width="<%= size %>"
               height="<%= size %>"
               data-cursor="pointer"/>          
          <div class="started-avatar-name">
            <%= t("views.avatars.#{avatar_name}") %>
          </div>
        <% else %>
          <img src="/images/avatars/bw/<%= avatar_name %>.jpg"
               width="<%= size %>"
               height="<%= size %>"/>
          <div class="unstarted-avatar-name">
            <%= t("views.avatars.#{avatar_name}") %>
          </div>
        <% end %>      
        <% index += 1 %>
      </td>
      <% end %>     
    </tr>
    <% end %>
  </table>
</div>



<script type="text/javascript"><!--

$(document).ready(function() {
    
  var revertButton = $('#revert_button');
  revertButton.click(function() {
    var title = $(this).val();
    var maxTag = parseInt($('#traffic_light_count').text());    
    cd.dialog_revert(title, "<%= @kata.id %>", "<%= @avatar.name %>", maxTag, maxTag);
  });    
  cd.tipify(revertButton);

});

//--></script>

<button type="button"
        id="revert_button"
        value="<%= t('views.buttons.revert') %>">
  <%= t('views.buttons.revert') %>	   
  <div class="tooltip">
    Revert to any<br>previous<br>traffic-light
  </div>
</button>


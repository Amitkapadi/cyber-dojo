
<div id="traffic_lights">
  <table>
    <% max_cols = 30 -%>    
    <tr class="row">
      <% recent(@avatar.increments, max_cols).each do |light| -%>
        <td>
          <%  in_new_page = true -%>
          <%= traffic_light(@kata, @avatar.name, light, in_new_page) -%>
        </td>
      <% end -%>
      <td>
        <div class="number">
          <%= @avatar.increments.length -%>
        </div>
      </td>
      <td>      
        <div id="spinner" 
             style='display:none'>
          <img src="/images/spinner.gif"          
               width="39" 
               height="39"/>
      </td>      
    </tr>      
  </table>
</div>


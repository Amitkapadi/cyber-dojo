
<div id="traffic_lights">
  <table>
    <tr class="row">
      
      <td>
        <div id="revert_tip">
                click<br/>
                to &rarr;<br/>
                revert<br/>
        </div>
      </td>                  
      
      <% max_lights = 35 %>                
      <% recent(@traffic_lights, max_lights).each do |light| %>
        <td valign="top">
          <span onclick="cd.dialog_revert('<%=@kata.id%>', '<%=@avatar.name%>', <%=light[:number]%>);">
            <%= revert_traffic_light(light) %>
	      </span>          
        </td>
      <% end %>
      
      <td valign="center">
        <%= render :partial => 'current_traffic_light_count' %>
      </td>
      
    </tr>      
  </table>
</div>


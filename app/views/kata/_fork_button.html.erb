
<script language="javascript" type="text/javascript"><!--

$(document).ready(function() {
  
  function dialog_fork() {
    var html = cd.divPanel(
        'Click ok to create a new cyber-dojo, with a new id, '
      + "whose starting files are identical to most recent traffic-light's.");
      
    return $('<div class="dialog">')
      .html(html)
      .dialog({
        autoOpen: false,
        width: 500,
        title: cd.dialogTitle('fork'),
        modal: true,
        buttons: {
          ok: function() {
            cd.postTo('/forker/fork', {
              id: "<%= @kata.id %>",
              avatar: "<%= @avatar.name %>"
            }, '_blank');
            $(this).dialog('close');
          },
          cancel: function() {
            $(this).dialog('close');
          }
        }
      });
  };
  
  $('#fork').click(function() {
    dialog_fork().dialog('open');
  });

});

//--></script>

<input type="button"
       class="button"
       title="Show help"
       id="fork"
       value="fork"/>




<script type="text/javascript"><!--

$(document).ready(function() {
  
  function dialog_fork(html, title) {
    var i18nButtons = { };
    i18nButtons["<%= t('views.buttons.ok') %>"] = function() {
      cd.postTo('/forker/fork', {
        id: "<%= @kata.id %>",
        avatar: "<%= @avatar.name %>"
      }, '_blank');
      $(this).dialog('close');      
    };
    i18nButtons["<%= t('views.buttons.cancel') %>"] = function() {
      $(this).dialog('close');            
    };
    
    return $('<div class="dialog">')
      .html(html)
      .dialog({
        autoOpen: false,
        width: 500,
        title: cd.dialogTitle(title),
        modal: true,
        buttons: i18nButtons
      });
  };
  
  $('#fork').click(function() {
    var title = $(this).text();        
    $.get('/kata/fork_dialog', function(html) {
      dialog_fork(html, title).dialog('open');
    });
  });

});

//--></script>

<div class="button"
     title="Fork a new dojo from the latest traffic-light"
     id="fork">
  <%= t("views.buttons.fork") %>
</div>



<script language="javascript" type="text/javascript"><!--

$j(document).ready(function() {

  $j('#id').click(function() {
    var grid = $j(
      $cd.makeTable(
      '<div class="panel">' +
        "<div>" +
          "language: <%= @kata.language.name -%>" +
        '</div>' +
        "<div>" +        
          "exercise: <%= @kata.exercise.name -%>" +
        '</div>' +
        "<div>" +        
          "kuid: <%= @kata.id -%>" +
        '</div>' +
      '</div>'));
      
    var div = $j('<div>')
      .html('<div style="font-size: 1.2em;">' + grid.html() + '</div>')    
      .dialog({
        autoOpen: false,
        width: 350,
        title: '<h1>id</h1>',
        modal: true,
        buttons: {
          ok: function() {
            $j(this).dialog('close');
          }
        }
      });
    div.dialog('open');            
  });

});

//--></script>

<input type="button"
       class="small button"
       title="Show id"
       id="id"
       value="id"/>

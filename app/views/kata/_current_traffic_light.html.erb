
<div id="current_traffic_light">
  <table>
    <tr class="row">

      <% if @avatar.increments.length != 0 -%>
        <td>
          <div id="rag" valign="top">
          <%  in_new_page = true -%>
          <%= linked_traffic_light(@kata, @avatar.name, @avatar.increments.last, in_new_page) -%>
          </div>
        </td>
        
        <td>
          <span class="number"
                id="tags_so_far">
            <%= @avatar.increments.length -%>
          </span>
        </td>        
      <% end -%>
      
      <td>      
        <div id="spinner">
          <img src="/images/spinner.gif"          
               width="40" 
               height="40"/>
        </div>
      </td>
            
    </tr>      
  </table>
</div>


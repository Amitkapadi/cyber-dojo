
<% post_message_options = 
   {
     :url => { :controller => :messages,
               :action => action,
               :id => @kata.id,
               :poster => poster
             },
     :with => "{ message: Field.getValue('message_text_input') }"
   } -%>

<%= tag( :input, 
    { 
      :type => :button,
      :class => "large button",
      :name => :post_message,
      :onclick => "#{remote_function(post_message_options)};resetMessageInput();",
      :id => :post_message_button,
      :value => :post,
      :title => "Post a message to everyone",
      :disabled => true
    }) -%>


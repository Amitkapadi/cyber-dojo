
<% next_tag_number = @traffic_lights_to_tag.length -%>

<script language="javascript" type="text/javascript"><!--

$j(document).ready(function() {

  $j('#next_button').click(function() {
    $cd.postTo('/diff/show', {
      id: "<%= @kata.id %>",
      avatar: "<%= @avatar.name %>",
      tag: "<%= next_tag_number+1 %>"
    });  
  });

});

//--></script>

<button class="button"
        id="next_button"
        <% if next_tag_number < @all_traffic_lights.length -%>
        type="submit"
        title="View next diff (<%=next_tag_number+1-%>)" >
        <% else -%>
        type="button"
        disabled>
        <% end -%>
  <img src="/images/right-triangle.gif"
       width="27" 
       height="30" />
</button>



<script language="JavaScript"
        type="text/javascript"><!--

$(document).ready(function() {

  var heartbeat = function() {
    $.ajax({
      url: "<%= url_for :action => 'heartbeat' %>",
      data: {
        id: "<%= @kata.id %>",
        avatar: "<%= @avatar.name %>",
        was_tag: "<%= @was_tag %>",
        now_tag: "<%= @now_tag %>"
      },
      dataType: "script"
    });
  };
  var seconds = 1000;    
  setInterval(heartbeat, 10*seconds);

});

//--></script>


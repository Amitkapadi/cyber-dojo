
<table vertical-align="middle"
       cellpadding="0"
       cellspacing="0">
  <% @diffs.each do |file| -%>
    <% n_deleted = file[:deleted_line_count] -%>
    <% n_added   = file[:added_line_count]   -%>
    <tr>
      <td align="right">
        <% if n_deleted > 0 -%>
          <div class="diff-deleted-line-count">
            <%= n_deleted -%>
          </div>
        <% end -%>
      </td>
      <td align="left">        
        <div class="filename"
             id="<%= file[:id] -%>" >
          <input id="radio_<%=file[:id]-%>"
                 name="filename"
                 type="radio"
                 checked="checked"
                 value="<%=file[:name]-%>"/>
          <label><%=file[:name]-%></label>
        </div>
      </td>    
      <td align="left">
        <% if n_added > 0 -%>
          <div class="diff-added-line-count">
            <%= n_added -%>
          </div>
        <% end -%>
      </td>
    </tr>
  <% end -%>
</table>


    
